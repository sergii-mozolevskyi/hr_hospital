<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="category_hr_hospital" model="ir.module.category">
            <field name="name">HR Hospital</field>
            <field name="description">HR Hospital (User access levels)</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_hr_hospital_patient" model="res.groups">
            <field name="name">Patient</field>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="comment">Patient (HR Hospital)</field>
        </record>

        <record id="group_hr_hospital_doctor" model="res.groups">
            <field name="name">Doctor</field>
            <field name="implied_ids"
                   eval="[(6, 0, [ref('group_hr_hospital_patient')])]"/>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="comment">Doctor (HR Hospital)</field>
        </record>

        <record id="group_hr_hospital_doctor_intern" model="res.groups">
            <field name="name">Doctor (Intern)</field>
            <field name="implied_ids"
                   eval="[(6, 0, [ref('group_hr_hospital_doctor')])]"/>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="comment">Doctor intern (HR Hospital)</field>
        </record>

        <record id="group_hr_hospital_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids"
                   eval="[(6, 0, [ref('group_hr_hospital_patient'), ref('group_hr_hospital_doctor'), ref('group_hr_hospital_doctor_intern'),] )]"/>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="comment">Manager (HR Hospital)</field>
        </record>

        <record id="group_hr_hospital_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="category_hr_hospital"/>
            <field name="implied_ids"
                   eval="[(6, 0, [ref('group_hr_hospital_patient'), ref('group_hr_hospital_doctor'), ref('group_hr_hospital_doctor_intern'), ref('group_hr_hospital_manager'),])]"/>
            <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
            <field name="comment">Administrators of the HR Hospital (full rights)</field>
        </record>
    </data>
</odoo>
