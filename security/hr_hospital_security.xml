<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_hospital_patient_visit_read_rule" model="ir.rule">
            <field name="name">HR Hospital Patient, Doctors, Interns can only view own visits</field>
            <field name="model_id" ref="model_hr_hospital_patient_visit"/>
            <field name="global" eval="False"/>
            <field name="domain_force">['|',
                ('patient_id.res_partner_id', '=', user.partner_id.id),
                '|', ('doctor_id.res_partner_id', '=', user.partner_id.id),
                ('doctor_id.mentor_id.res_partner_id', '=', user.partner_id.id),
                ]</field>
            <field name="groups" eval="[Command.link(ref('group_hr_hospital_patient'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="hr_hospital_patient_visit_write_rule" model="ir.rule">
            <field name="name">HR Hospital Doctors and Interns can write only own visits, and his interns</field>
            <field name="model_id" ref="model_hr_hospital_patient_visit"/>
            <field name="global" eval="False"/>
            <field name="domain_force">['|',
                ('doctor_id.res_partner_id', '=', user.partner_id.id),
                ('doctor_id.mentor_id.res_partner_id', '=', user.partner_id.id),
                ]</field>
            <field name="groups" eval="[Command.link(ref('group_hr_hospital_doctor'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="hr_hospital_patient_visit_rule_manager" model="ir.rule">
            <field name="name">HR Hospital managers can view and change visits</field>
            <field name="model_id" ref="model_hr_hospital_patient_visit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[Command.link(ref('group_hr_hospital_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="hr_hospital_patient_visit_rule_admin" model="ir.rule">
            <field name="name">HR Hospital administrators have full rights on visits</field>
            <field name="model_id" ref="model_hr_hospital_patient_visit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[Command.link(ref('group_hr_hospital_admin'))]"/>
        </record>

    </data>
</odoo>