<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.tree ()</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="%(hr_hospital.hr_hospital_report_diseases_wizard_action)d" string="Report on diseases" type="action"/>
                </header>
                <field name="person_name"/>
                <field name="description"/>
                <field name="res_partner_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form ()</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(hr_hospital.hr_hospital_report_diseases_wizard_action)d" string="Report on diseases" type="action"/>
                </header>
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <field name="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="person_name"/>
                            <field name="gender"/>
                            <field name="phone"/>
                            <field name="speciality_id"/>
                        </group>
                        <group>
                            <field name="is_intern"/>
                            <field name="res_partner_id"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Interns" invisible="is_intern">
                                <field name="intern_ids" mode="kanban" >
                                    <kanban>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div>
                                                    <div>
                                                        <field name="name"/>
                                                    </div>
                                                    <div>
                                                        <field name="phone"/>
                                                    </div>
                                                    <field name="photo" widget="image" options="{'size': [150, 150]}"/>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Mentors information" invisible="not is_intern">
                                <group>
                                    <field name="mentor_photo" widget="image" options="{'size': [150, 150]}"/>
                                    <field name="mentor_id" widget="many2one"/>
                                    <field name="mentor_phone"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search (hr_hospital_doctor)</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Filters">
                <filter string="Mentors" domain="[('is_intern', '=', False)]" name="all_mentors" />
                <filter string="Interns" domain="[('is_intern', '=', True)]" name="all_phone" />
            </search>
        </field>
    </record>

    <record id="hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.kanban (hr_hospital_doctor)</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="speciality_id" records_draggable="False"
                    archivable="False" quick_create="True" quick_create_view="hr_hospital.hr_hospital_doctor_form">
                <field name="name"/>
                <field name="is_intern"/>
                <header>
                    <button name="add_visit" type="object" string="Add visit" display="always"/>
                </header>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click"
                             style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 16px; background-color: #f9f9f9; transition: box-shadow 0.3s;">
                            <t t-set="raw_value" t-value="record.name.raw_value" />
                            <t t-out="raw_value"/>
                            <div>
                                <strong class="o_kanban_record_title">
                                    <field name="speciality_id"/>
                                </strong>
                            </div>
                            <div>
                                <t t-if="record.is_intern.raw_value">
                                    <div>Intern</div>
                                </t>
                                <t t-else="">
                                    <div>
                                        <strong>Interns:</strong>
                                        <field name="intern_ids" widget="many2many_tags"/>
                                    </div>
                                </t>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_right">
                                    <field name="res_partner_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem
            id="hr_hospital_menu_doctor"
            action="action_hr_hospital_doctor_window"
            name="Doctors"
            parent="hr_hospital_menu_doctors"
            sequence="185"/>
    </data>
</odoo>
