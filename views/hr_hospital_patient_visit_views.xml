<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_patient_visit_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visit.tree ()</field>
        <field name="model">hr.hospital.patient.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
                <field name="scheduled_visit_date"/>
                <field name="visit_date"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_visit_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visit.form ()</field>
        <field name="model">hr.hospital.patient.visit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="scheduled,canceled,completed"
                           field_id="state_0" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="scheduled_visit_date"/>
                            <field name="doctor_id"/>
                            <field name="patient_id"/>
                            <field name="visit_date" invisible="context.get('quick_create')"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="description"/>
                        </group>
                        <notebook invisible="context.get('quick_create')">
                            <page string="Diagnosis">
                                <field name="diagnosis_id"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="hr_hospital_patient_visit_pivot" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visit.pivot (hr_hospital_patient_visit)</field>
        <field name="model">hr.hospital.patient.visit</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <pivot string="Pivot Example" sample="1" disable_linking="1" display_quantity="1">
                <field name="create_date" interval="month" type="col"/>
                <field name="state" type="col"/>
                <field name="doctor_id" type="row"/>
                <field name="name" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="hr_hospital_patient_visit_search" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visit.search (hr_hospital_patient_visit)</field>
        <field name="model">hr.hospital.patient.visit</field>
        <field name="arch" type="xml">
            <search string="Filters">
                <group expand="0" string="Group by">
                    <filter string="State" name="state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Doctor" name="doctor_id" domain="[]" context="{'group_by': 'doctor_id'}"/>
                    <filter string="Patient" name="patient_id" domain="[]" context="{'group_by': 'patient_id'}"/>
                </group>
                <searchpanel>
                    <field name="state" select="multi" expand="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="hr_hospital_patient_visit_calendar" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visit.calendar (hr_hospital_patient_visit)</field>
        <field name="model">hr.hospital.patient.visit</field>
        <field name="arch" type="xml">
            <calendar string="Patient visits" create="0" delete="0" mode="month" date_start="scheduled_visit_date" color="doctor_id">
                <field name="doctor_id" avatar_field="avatar_128"/>
                <field name="patient_id" avatar_field="avatar_128"/>
            </calendar>
        </field>
    </record>

     <record id="action_hr_hospital_patient_visit_window" model="ir.actions.act_window">
        <field name="name">Patient visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient.visit</field>
        <field name="view_mode">tree,form,pivot,calendar</field>
    </record>

    <menuitem id="hr_hospital_menu_patient_visit"
              action="action_hr_hospital_patient_visit_window"
              parent="hr_hospital_menu_patients"
              name="Patient visits" sequence="200"/>
</odoo>
